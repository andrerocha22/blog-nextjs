{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "React": "writable",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "react/react-in-jsx-scope": "off",

      "semi": [2, "always"],
      "indent": ["error", 2],
      "object-curly-spacing": ["error", "always"],
      "no-extra-parens": "error",
      "max-len": ["error", { "code": 170 }],
      "no-multi-spaces": "error"
    },
    "settings": {
      "react": {
        "version": "16.13"
      }
    }
}
